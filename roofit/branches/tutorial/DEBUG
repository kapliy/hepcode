#!/bin/bash

input=/share/t3data3/antonk/ana/ana_v29G_07112012_DtoM_jerjes_wptw_stacoCB_all # histograms use tight iso per Max.
input=/share/t3data3/antonk/ana/ana_v29G_07202012_newROOT_stacoCB_all
input=/share/t3data3/antonk/ana/ana_v29G_07252012_newROOT_stacoCB_all

# RESURRECTING NTUPLE-BASED PLOTTING:
./stack2.py --input ${input} --qcd 1.0 -b --var "fabs(l_eta)" --bin 10,0.0,2.5 --hsource "lepton_absetav" -o TEST -t TEST --pre "ptiso40/l_pt<0.1 && met>25.0 && l_pt>20.0 && fabs(l_eta)<2.4 && w_mt>40.0 && idhits==1 && fabs(z0)<10.0 && nmuons==1 && l_trigEF<0.2" --cut "mcw*puw*effw*trigw*wptw" -m ALL --bgsig 5 --bgewk 5 --bgqcd 3 #--metallsys

